{% extends 'base.html.twig' %}

{% block title %}Contenu du panier{% endblock %}

{% block body %}

<div class = "jumbotron">
    <h1 style="text-align:center; background-color:cyan; text-decoration:underline">Panier</h1>
</div>  

{% if items | length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.title }}</td>
                    <td><img src="{{ asset('uploads/images/' ~ item.product.image) }}" alt="" width="100"></td>
                    <td>{{ item.product.price }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.price * item.quantity }}</td>
                    <td>
                        <a href="{{ path('product_remove', {'id': item.product.id }) }}" class="btn btn-warning btn-sm">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-right">Total :
                </td>
                <td>{{ total }}</td>
                <td>
                    <a href="{{ path('product_removeAll') }}" class="btn btn-danger btn-sm">
                        Supprimer tout
                    </a>
                </td>
            </tr>
        </tfoot>
    </table>
{% else %}
    <p>Vide</p>
{% endif %}
{% endblock %}