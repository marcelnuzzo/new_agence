{% extends 'base.html.twig' %}

{% block title %}Contenu de l'article{% endblock %}

{% block body %}

<div class = "jumbotron">
    <h1 style="text-align:center; background-color:cyan; text-decoration:underline">produit</h1>
</div>  

<div class="container-fluid">
<h1 style="text-align:center;background-color:yellow">{{ product | length }} produits :</h1> 
    <div class="row">
        <div class="col-2">
            <h5><strong>Titre :</strong></h5>
        </div>
        <div class="col-2">
            <h5><strong>lien PDF :</strong></h5>
        </div>
        <div class="col-2">
            <h5><strong>PDF :</strong></h5>
        </div>
         <div class="col-2">
            <h5><strong>Format image :</strong></h5>
        </div>
        <div class="col-4">
            <h5><strong>Achat :</strong></h5>
        </div>
    </div>
</div>
<hr>
<div class="container-fluid">
{% for product in products %}
    <div class="row">
        <div class="col-2">
            <h5>{{ product.title }}</h5>
        </div>
        <div class="col-2">
            <p>{{ product.brochureFilename }}</p>
        </div>
        <div class="col-2">
            <div class="d-inline-block">
                <i class="fa fa-file-text-o"></i>
            </div>
            &nbsp&nbsp
            <div class="d-inline-block">
                <a class="btn btn-info" href="{{ asset('uploads/brochures/' ~ product.brochureFilename) }}">Voir PDF</a>
            </div>
        </div>
        <div class="col-2">
            <div class="d-inline-block">
                <i class="fa fa-file-image-o"></i>
            </div>
            &nbsp&nbsp
            <div class="d-inline-block">
                <a class="btn btn-info" href="{{ asset('uploads/images/' ~ product.image) }}">Voir image)</a>
            </div>
        </div>
        <div class="col-4">
            <a class="btn btn-success" style="color:white" href="#" role="button" >Commander</a>
        </div>
    </div>
    <hr>
{% endfor %}
</div>
   
{% endblock %}